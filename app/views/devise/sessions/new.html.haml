.row
  .col-md-6.col-md-offset-3
    %h2 Log in
    %p 
      Not registered yet? #{ link_to "Not a problem. Sign up now!", new_registration_path(resource_name) }
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-inputs
        = f.input :email, label: "Email address:", required: true, autofocus: true
        = f.input :password, label: "Password:", required: true
        = f.input :remember_me, label: "Keep me signed in", as: :boolean if devise_mapping.rememberable?
        = f.submit "Log in", class: "btn btn-success"

    = link_to "Forgot your password?", new_password_path(resource_name)
